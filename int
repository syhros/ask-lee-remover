if(!firstRowAdjusted){
            const firstRowDiv = document.querySelector('div.row:not(.card-padding)');
            if (firstRowDiv) {
                firstRowDiv.classList.remove('row');
                firstRowDiv.classList.add('row-null');
                firstRowAdjusted = true;
                console.log("[WIMS Fix] First 'div.row' adjusted.");
            }
        }
